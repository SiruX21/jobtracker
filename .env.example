# .env.example
# Copy this file to `.env` and replace the placeholder values with your actual secrets

# Environment Configuration
ENVIRONMENT=development
DEBUG=True

# URL Configuration
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000
DOMAIN=your.domain.com
FRONTEND_DOMAIN=https://your-frontend.domain.com
BACKEND_DOMAIN=https://your-backend.domain.com

# CORS Configuration
CORS_ORIGINS=http://localhost:5173

# Security
SECRET_KEY=your-secret-key

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-db-password
DB_NAME=auth_db

# Email Configuration (Zoho or other)
MAIL_SERVER=smtp.your-mail-provider.com
MAIL_PORT=465
MAIL_USE_TLS=False
MAIL_USERNAME=your@email.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your@email.com

# Frontend Environment Variables
VITE_API_BASE_URL=http://localhost:5000
VITE_API_URL=http://localhost:5000
VITE_APP_NAME=Job Tracker
VITE_VERSION=1.0.0
